# Node.js / Bun entry point (.env)
# For Cloudflare Workers, use .dev.vars instead

PORT=3005
DB_PATH=./data/local.db

# Auth
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your_random_secret_key_here_min_32_chars
BETTER_AUTH_URL=http://localhost:3005

# CORS & Origins
TRUSTED_ORIGINS=http://localhost:3000
APP_URL=http://localhost:3000

# Google OAuth
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Twitter OAuth
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Email Service (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Rate Limiting (per IP)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# SIWE (Sign in with Ethereum) — optional
SIWE_DOMAIN=localhost:3000
SIWE_EMAIL_DOMAIN=localhost

# Passkey (WebAuthn) — optional
PASSKEY_RP_ID=localhost
PASSKEY_RP_NAME=Better Auth Template
PASSKEY_ORIGIN=http://localhost:3000
