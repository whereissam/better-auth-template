{
  "name": "better-auth-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Better Auth + SIWE backend template",
  "scripts": {
    "dev": "bun run db:start && bun run db:migrate && bun run dev:server",
    "dev:server": "tsx watch server.ts",
    "db:start": "cd .. && docker-compose up -d postgres && echo '‚è≥ Waiting for database to be ready...' && sleep 10 && cd backend",
    "start": "node --import tsx server.ts",
    "build": "tsc",
    "db:migrate": "npx @better-auth/cli migrate",
    "db:generate": "npx @better-auth/cli generate"
  },
  "dependencies": {
    "better-auth": "^1.3.27",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "resend": "^6.2.2",
    "siwe": "^3.0.0",
    "viem": "^2.38.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.15.5",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  }
}
