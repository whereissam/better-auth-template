{
  "name": "better-auth-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Better Auth + SIWE backend template",
  "scripts": {
    "dev": "bun run db:start && bun run db:migrate && bun run dev:server",
    "dev:server": "tsx watch server.ts",
    "dev:express": "tsx watch server.express.ts",
    "db:start": "cd .. && docker-compose up -d postgres && echo '‚è≥ Waiting for database to be ready...' && sleep 10 && cd backend",
    "start": "node --import tsx server.ts",
    "build": "tsc",
    "db:migrate": "npx @better-auth/cli migrate",
    "db:generate": "npx @better-auth/cli generate",
    "cf:dev": "wrangler dev",
    "cf:deploy": "wrangler deploy",
    "cf:deploy:prod": "wrangler deploy --env production",
    "cf:tail": "wrangler tail",
    "cf:hyperdrive:create": "wrangler hyperdrive create better-auth-db --connection-string=postgresql://user:password@host:5432/dbname"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "better-auth": "^1.3.27",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "hono": "^4.10.1",
    "hono-rate-limiter": "^0.4.2",
    "hpp": "^0.2.3",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "siwe": "^3.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.15.5",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "wrangler": "^4.43.0"
  }
}
